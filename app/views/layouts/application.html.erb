              <li class="col-md-6"><%= link_to 'top', contacts_path %></li>
              <li class="col-md-6"><%= link_to 'contact', new_contact_path %></li>
            </ul>
          </div>
      </nav>
      <%= yield %>
      <footer>
        <p>YUKIE ISHIKAWA</p>
